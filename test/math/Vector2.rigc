import "math/General";

export class Vector2
{
	x: Float32;
	y: Float32;

	construct {
		x = 0.f;
		y = 0.f;
	}

	construct(scalar: Float32)
	{
		self.x = scalar;
		self.y = scalar;
	}

	construct(x: Float32, y: Float32)
	{
		self.x = x;
		self.y = y;
	}

	normalized {
		var copy = self;
		var len = copy.length();
		copy.x /= len;
		copy.y /= len;
		ret copy;
	}

	length {
		ret sqrt(x*x + y*y);
	}

	plus(x: Float32, y: Float32) {
		ret Vector2(self.x + x, self.y + y);
	}
	plus(scalar: Float32) {
		ret self.plus(scalar, scalar);
	}
	plus(vec: Vector2) {
		ret self.plus(vec.x, vec.y);
	}
}
